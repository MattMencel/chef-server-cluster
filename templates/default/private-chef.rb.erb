topology "<%= node['ec']['topology'] %>"

<% @ec_vars[:disabled_svcs].each do |svc| -%>
<%= svc %>['enable'] = false
<% end -%>
<% @ec_vars[:enabled_svcs].each do |svc| -%>
<%= svc %>['enable'] = true
<% end -%>

<% @ec_vars[:vips].each do |vip_name, vip_add| -%>
<%= vip_name %>['vip'] = "<%= vip_add %>"
<% end -%>

server "<%= node['fqdn'] %>",
    <% if @ec_vars[:bootstrap][:enable] -%>
    :bootstrap => true,
    <% end -%>
    <% if @ec_vars[:role] -%>
    :role => "<%= @ec_vars[:role] %>",
    <% end -%>
    :ipaddress => "<%= node['ipaddress'] %>"
